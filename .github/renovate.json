{
  "extends": [
    "config:base",
    "github>hatena/renovate-config"
  ],
  "labels": ["dependencies"],
  "schedule": ["after 7pm and before 8am on every weekday", "every weekend"],
  "automerge": true,
  "major": {
      "automerge": false
  },
  "minor": {
    "automerge": false
  },
  "packageRules": [
    {
        "matchManagers": ["ruby-version"],
        "enabled": false
    },
    {
      "matchManagers": ["bundler"],
      "automerge": true,
      "major": {
        "automerge": false
      }
    }
  ]
}
