root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 150
trim_trailing_whitespace = true

[*.{kt,kts}]
ij_kotlin_line_break_after_multiline_when_entry = false

[*.{yml,json}]
indent_size = 2

[Makefile]
indent_style = tab
trim_trailing_whitespace = false
